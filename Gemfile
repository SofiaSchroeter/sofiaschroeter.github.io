source "https://rubygems.org"

ruby "~> 3.3"

# Lock to a stable Jekyll for local development
gem "jekyll", "~> 4.3"

# Ruby 3+ no longer bundles WEBrick
gem "webrick", "~> 1.8"

group :jekyll_plugins do
  # Needed to use the Minimal Mistakes remote theme locally
  gem "jekyll-remote-theme"
  # Recommended by Minimal Mistakes to speed up includes
  gem "jekyll-include-cache"
end
